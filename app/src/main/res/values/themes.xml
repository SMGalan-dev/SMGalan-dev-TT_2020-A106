<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TT_A106_v0" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/greenmain</item>
        <item name="colorPrimaryVariant">@color/greenmain</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/greenmain</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/bluemain</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/bluemain</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TT_A106_v0.ActionBar" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/greenmain</item>
        <item name="colorPrimaryVariant">@color/greenmain</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/greenmain</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/bluemain</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white</item>

        <!-- Customize your theme here. -->
    </style>
    <style name = "SplashTheme" parent = "Theme.TT_A106_v0">
        <item name="android:windowFullscreen">true</item>
        <item name = "android:windowBackground">@drawable/splashscreen</item>
    </style>
    <style name="Theme.TT_A106_v0.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item  name="android:textColor">@color/bluemain</item>
    </style>
    <style name="Theme.TT_A106_v0.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.TT_A106_v0.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Spinner">
        <item name="android:textColor">@color/bluemain</item>
        <item name="backgroundColor">@color/white</item>
    </style>

</resources>