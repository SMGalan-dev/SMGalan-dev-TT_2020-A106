<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_cite_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="6dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"

    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/twItemCiteTitle"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="16dp"
                android:text="Titulo"
                android:textAppearance="?attr/textAppearanceHeadline6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/twItemCiteDate"
                android:layout_margin="4dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textAppearance="?attr/textAppearanceHeadline6"
                tools:text="Dia-Mes-AÃ±o" />
            <TextView
                android:id="@+id/twItemCiteTime"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textAppearance="?attr/textAppearanceHeadline6"
                tools:text="Hora" />
        </LinearLayout>
        <TextView
            android:id="@+id/twItemCiteMedic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textAlignment="textStart"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="Medico" />
        <TextView
            android:id="@+id/twItemCitePlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textAlignment="textStart"
            android:textAppearance="?attr/textAppearanceHeadline6"
            app:layout_constraintStart_toEndOf="@+id/twItemCiteMedic"
            app:layout_constraintTop_toBottomOf="@+id/twItemCiteTime"
            tools:text="Lugar" />

        <TextView
            android:id="@+id/twItemCiteComment"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            tools:text="Comentarios" />


</LinearLayout>



</com.google.android.material.card.MaterialCardView>